<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Resource Title"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <EditText
                android:id="@+id/resource_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Resource Title"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Link"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <EditText
                android:id="@+id/assignment_detail"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Resource Link"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/resource_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/curved_background"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="SHARE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/curved_background"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Shared Resources"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview_assignment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</ScrollView>